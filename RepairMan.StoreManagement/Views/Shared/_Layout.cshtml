<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" type="image/png" href="/AdminTemplateAssets/images/logos/favicon.png" />
    <link rel="stylesheet" href="/Content/css/adminTemplate.css" />
    <link rel="stylesheet" href="/Content/css/base.css" />
</head>

<body class="g-sidenav-show rtl bg-gray-200">
<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">
    @Html.Partial("_Menu")
    <!--  Main wrapper -->
    <!--  Header Start -->
    @Html.Partial("_Header")
    <!--  Header End -->

    <div class="header-background"></div>
    <div class="body-wrapper">
        @RenderBody()
        <br />
    </div>
</div>
<script src="/Content/js/adminTemplate.js"></script>
<script src="/Content/js/base.js"></script>
<script src="/Content/js/home.js"></script>
</body>
</html>